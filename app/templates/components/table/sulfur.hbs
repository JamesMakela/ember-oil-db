<div class="detail-section">
  <div class="table-responsive">
    <strong>Sulfur Content:</strong>

    <table class="table table-hover table-bordered">
      <thead class="clickable" data-toggle="collapse"
             data-target=".sulfur-row-collapse"
             aria-controls="sulfur-tbody sulfur-placeholder"
             aria-expanded="false">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Fraction</th>
          <th scope="col">Weathering</th>
        </tr>
      </thead>
      <tbody id="sulfur-tbody" class="collapse sulfur-row-collapse">
        {{#each oil.sulfur as |sulfur index|}}
          <tr>
            <th scope="row">{{index}}</th>
            <td>{{value-unit sulfur.fraction 3}}</td>
            <td>{{sulfur.weathering}}</td>
          </tr>
        {{else}}
          No Values
        {{/each}}
      </tbody>
      <tbody id="sulfur-placeholder" class="collapse show sulfur-row-collapse">
        <tr>
          <th scope="row">&#x2026;</th>
        </tr>
      </tbody>
    </table>
  </div>

</div>
