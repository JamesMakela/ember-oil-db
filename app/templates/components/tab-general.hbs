<div class="container">
  <div class="row">
    <div class="col-sm-4 col-lg-2">
      <strong>ID:</strong> {{oil.id}}
    </div>

    <div class="col-sm">
      <strong>Location:</strong>
      {{#if oil.location}}
        {{oil.location}}
      {{else}}
        None
      {{/if}}
    </div>

  </div>


  <div class="row">
    <div class="col-sm-4 col-lg-2">
      <strong>Type:</strong>
      {{#if oil.productType}}
        {{oil.productType}}
      {{else}}
        None
      {{/if}}
    </div>  

    <div class="col-sm">
      <strong>Categories:</strong>

      {{#each oil.categories as |category|}}
        <span class="badge badge-dark">
          {{category}}
        </span>
      {{else}}
        None
      {{/each}}
    </div>

  </div>


</div>
