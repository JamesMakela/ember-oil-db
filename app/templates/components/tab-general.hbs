<div class="container">
  <div class="row">
    <div class="col-sm-4 col-lg-2">
      {{! First column }}

      <strong>ID:</strong> {{oil.id}}
      <br>

      <strong>Type:</strong>
      {{#if oil.productType}}
        {{oil.productType}}
      {{else}}
        None
      {{/if}}
      <br>

      {{#if oil.status}}
        <ul>
          {{#each oil.status as |stat|}}
            <li><i class="status-bad">{{stat}}</i></li>
          {{/each}}
        </ul>
      {{else}}
        <strong>
          Status: <i class="status-good">OK</i>
        </strong>
      {{/if}}
    </div>

    <div class="col-sm-8 col-md-8 col-lg-5 col-xl-4">
      {{! Second column }}

      <strong>API:</strong>

      {{#each oil.apis as |api|}}
        <span class="badge badge-dark">
          {{round-relative api.gravity 2}}
        </span>
      {{else}}
        <span>
          No Values
        </span>
      {{/each}}
      <br>

      <strong>Categories:</strong>

      {{#each oil.categories as |category|}}
        <span class="badge badge-dark">
          {{category}}
        </span>
      {{else}}
        None
      {{/each}}
    </div>

    <div class="col">
      {{! Third column }}

      <strong>Location:</strong>
      {{#if oil.location}}
        {{oil.location}}
      {{else}}
        None
      {{/if}}
      <br>

      <strong>Reference:</strong>
      {{#if oil.reference}}
        {{oil.reference}}
      {{else}}
        None
      {{/if}}
      <br>

      <strong>Reference Date:</strong>
      {{#if oil.referenceDate}}
        {{! Europe/London is how we lookup GMT in moment.js }}
        {{moment-format (unixÂ oil.referenceDate) "YYYY-MM-DD" timeZone="Europe/London"}}
      {{else}}
        None
      {{/if}}
      <br>

      <strong>Comments:</strong>
      {{#if oil.comments}}
        {{oil.comments}}
      {{else}}
        None
      {{/if}}
      <br>
    </div>  

  </div>

</div>
