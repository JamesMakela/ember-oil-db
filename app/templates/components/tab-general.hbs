<div class="container">
  <div class="row">
    <div class="col-sm-4 col-lg-2">
      <strong>ID:</strong> {{oil.id}}
    </div>

    <div class="col-sm">
      <strong>Location:</strong>
      {{#if oil.location}}
        {{oil.location}}
      {{else}}
        None
      {{/if}}
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4 col-lg-2">
      <strong>Type:</strong>

      {{#if oil.productType}}
        {{oil.productType}}
      {{else}}
        None
      {{/if}}
    </div>  

    <div class="col-sm">
      <strong>Categories:</strong>

      {{#each oil.categories as |category|}}
        <span class="badge badge-dark">
          {{category}}
        </span>
      {{else}}
        None
      {{/each}}
    </div>

  </div>

  <div class="row">
    <div class="col-sm">
    <strong>API:</strong>

    {{#each oil.apis as |api|}}
      <span class="badge badge-dark">
        {{round-relative api.gravity 2}}
      </span>
    {{else}}
      <span>
        No Values
      </span>
    {{/each}}
    </div>
  </div>

  <div class="row">
    <div class="col-sm">
      {{#if oil.status}}
        <ul>
          {{#each oil.status as |stat|}}
            <li><i class="status-bad">{{stat}}</i></li>
          {{/each}}
        </ul>
      {{else}}
        <strong>
          Status: <i class="status-good">OK</i>
        </strong>
      {{/if}}
    </div>
  </div>

</div>
