<div class="detail-section">
  <div class="table-responsive">
    <strong>Benzene & Alkylated Benzene:</strong>

    <table class="table table-hover table-bordered">
      <thead class="clickable" data-toggle="collapse"
             data-target=".benz-row-collapse"
             aria-controls="benz-tbody benz-placeholder"
             aria-expanded="false">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Fraction</th>
          <th scope="col">Weathering</th>
        </tr>
      </thead>
      <tbody id="benz-tbody" class="collapse benz-row-collapse">
        {{#each oil.benzene as |benzene index|}}
          <tr>
            <th scope="row">{{index}}</th>
            <td>{{value-unit benzene.benzene 3}}</td>
            <td>{{benzene.weathering}}</td>
          </tr>
        {{else}}
          No Values
        {{/each}}
      </tbody>
      <tbody id="benz-placeholder" class="collapse show benz-row-collapse">
        <tr>
          <th scope="row">&#x2026;</th>
        </tr>
      </tbody>
    </table>
  </div>

</div>
